#!/bin/bash

# Pre-commit hook: Format and lint SCSS files

# Check if any SCSS files are staged
if git diff --cached --name-only | grep -q '\.scss$'; then
  echo "ğŸ¨ Formatting code..."
  npm run format
  
  echo "ğŸ” Running linting on staged changes..."
  if ! npm run lint; then
    echo "âŒ Linting failed. Commit aborted."
    exit 1
  fi
  
  echo "âœ… Linting passed"
fi

exit 0
